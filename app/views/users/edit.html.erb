
<h1>User info</h1>

<%= form_with model: @user do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :profile_image, accept: "image/*" %>
  </div>
  
  <div class="form-group">
    <%= f.label :introduction %>
    <%= f.text_area :introduction %>
  </div>
  
  <div class="form-group">
    <%= f.submit "Update User" %>
  </div>
<% end %>
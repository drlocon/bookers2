<p id="noticce"></p>
<div class="container px-5 px-sm-0">
  <!--error-->
  <%= render 'layouts/error_messages', model: @book_new %>
  
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user_info', user: @user %>
      <%= render 'books/book_new', book: @book_new %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <!--image-->
                <%= image_tag user.get_profile_image(100,100) %>
              </td>
              <!--name-->
              <td>
                <%= user.name %>
              </td>
              <!--show-->
              <td>
                <%= link_to "Show", user_path(user.id) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  
  </div>
</div>

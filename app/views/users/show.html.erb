<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'layouts/user_info', user: @user, book: @book %>
    
    <div class="col-md-8 offset-md-1">
      <p class="noticce">
        <h2>Books</h2>
        
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
          </tr>
          </thead>
          <tbody>
            <% @user.books.each do |book| %>
            <tr>
              <td>
                <!--profile_image-->
                <% if @user.profile_image.attached? %>
                  <%= image_tag @user.get_profile_image(100,100) %>
                <% else %>
                  <%= image_tag 'default-image' %>
                <% end %>
              </td>
              <td>
                <!--title-->
                <%= book.title %>
              </td>
              <td>
                <!--body-->
                <%= book.body %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        
      </p>
    </div>
    
  </div>
</div>
